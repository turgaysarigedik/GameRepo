<link href="~/Content/Project/css/styles.css" rel="stylesheet" type="text/css" />
<body>
    <div class="row container-fluid" style="position:relative;">
        <div id="categoryTable" class="col-md-3">
            <div id="list-group-table">
                <ul id="list-group" class="list-group">
                    <li class="list-group-item li-title"><b>Diziler</b></li>
                    <li class="list-group-item align">Aksiyon</li>
                    <li class="list-group-item align">Drama</li>
                    <li class="list-group-item align">Eğlence</li>
                    <li class="list-group-item align">Fantastik</li>
                    <li class="list-group-item align">Gençlik</li>
                    <li class="list-group-item align">Günlük Dizi</li>
                    <li class="list-group-item align">Komedi</li>
                    <li class="list-group-item align">Romantik Komedi</li>
                    <li class="list-group-item align">Sit Com</li>
                </ul>
                <ul id="list-group" class="list-group">
                    <li class="list-group-item li-title"><b>Programlar</b></li>
                    <li class="list-group-item align">Aksiyon</li>
                    <li class="list-group-item align">Drama</li>
                    <li class="list-group-item align">Eğlence</li>
                    <li class="list-group-item align">Fantastik</li>
                    <li class="list-group-item align">Gençlik</li>
                    <li class="list-group-item align">Günlük Dizi</li>
                    <li class="list-group-item align">Komedi</li>
                    <li class="list-group-item align">Romantik Komedi</li>
                    <li class="list-group-item align">Sit Com</li>
                </ul>
                <ul id="list-group" class="list-group">
                    <li class="list-group-item li-title"><b>Filmler</b></li>
                    <li class="list-group-item align">Aksiyon</li>
                    <li class="list-group-item align">Drama</li>
                    <li class="list-group-item align">Eğlence</li>
                    <li class="list-group-item align">Fantastik</li>
                    <li class="list-group-item align">Gençlik</li>
                    <li class="list-group-item align">Günlük Dizi</li>
                    <li class="list-group-item align">Komedi</li>
                    <li class="list-group-item align">Romantik Komedi</li>
                    <li class="list-group-item align">Sit Com</li>
                </ul>
            </div>
        </div>
        <div id="categoryList" class="col-md-9" style="padding: 0px;">
            <div class="row">
                <div class="col-md-4">
                    <h2 style="color: white;">Categories</h2>
                </div>

                <div class="col-md-8">
                    <div class="dropdown" style="position: relative;">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                            Dropdown Example
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#">LOL</a></li>
                            <li><a href="#">Dota 2</a></li>
                            <li><a href="#">PubG</a></li>
                        </ul>
                    </div>
                </div>
            </div>



            <div class="cards">
                @foreach (var category in Model.Categories)
                {
                    <a href="#" class="card">
                      <img id="card-img" style="position: absolute;" src="~/Content/Project/images/@category.Picture">
                      <img class="card-play" style="position: relative;" src="~/Content/Project/images/play (1) (1).png">
                        <h6>@category.CategoryName</h6>
                    </a>

                }

            </div>


        </div>
    </div>

    @*<script src="~/Content/lib/Bootstrap/js/bootstrap.bundle.min.js"></script>*@
</body>